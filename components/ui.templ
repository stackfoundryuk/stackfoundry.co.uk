package components

templ FeatureCard(number string, title string, desc string) {
	<div class="p-10 border-b-2 md:border-b-0 md:border-r-2 border-base-content/10 hover:bg-base-100 transition-colors group">
		<div class="font-mono text-xs text-primary mb-4 opacity-50 group-hover:opacity-100">{ number }</div>
		<h3 class="text-2xl font-display font-bold uppercase mb-2">{ title }</h3>
		<p class="font-mono text-sm opacity-70">{ desc }</p>
	</div>
}
